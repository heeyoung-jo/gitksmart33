<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="kr.or.ksmart.ksmart_mybatis.mapper.MemberMapper">
  	<resultMap type="kr.or.ksmart.ksmart_mybatis.vo.Member" id="memberResultMap">
  		<result property="memberId" column="m_id"/>
  		<result property="memberPw" column="m_pw"/>
  		<result property="memberLevel" column="m_level"/>
  		<result property="memberName" column="m_name"/>
  		<result property="memberEmail" column="m_email"/>
  	</resultMap>
  	<select id="login" resultMap="memberResultMap">
	 	SELECT 
		*
		FROM
		tb_member
		WHERE 
		m_id=#{memberId}
	 </select>
  	<delete id="deleteM">
  		DELETE 
		FROM 
		tb_member 
		WHERE m_id=#{memberId}
  	</delete>
  	<update id="updateM" parameterType ="kr.or.ksmart.ksmart_mybatis.vo.Member">
  	UPDATE tb_member
		SET
		m_pw=#{memberPw},
		m_level=#{memberLevel},
		m_name=#{memberName},
		m_email=#{memberEmail}
		WHERE m_id = #{memberId};
  	</update>
  	<select id="selectByMember" resultMap="memberResultMap">
  	SELECT
	*
	FROM
	tb_member
	WHERE
	m_id=#{memberId}
  	</select>
  	<select id="getMemberList" resultMap="memberResultMap">
  		SELECT
		*
		FROM
		tb_member
  	</select>
  	
	<select id="memberSearch" resultType="kr.or.ksmart.ksmart_mybatis.vo.Member">
		SELECT
		m_id AS memberId,
		m_pw AS memberPw,
		m_level AS memberLevel,
		m_name AS memberName,
		m_email AS memberEmail
		FROM
		tb_member
	<if test="sv != null and sv neq ''.toString()">
		WHERE
		${sk} Like CONCAT('%',#{sv},'%')
	</if>
	</select>
	
	<insert id="addMember" parameterType ="kr.or.ksmart.ksmart_mybatis.vo.Member">
	INSERT INTO tb_member
	(m_id,m_pw,m_level,m_name,m_email) 
	VALUES
	(#{memberId},
	#{memberPw},
	#{memberLevel},
	#{memberName},
	#{memberEmail})
	</insert>
	
</mapper>